<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="Create-Refresh-Request">
    <DisplayName>Create Refresh Request</DisplayName>
    <Set>
        <FormParams>
            <FormParam name="client_id">{client_id}</FormParam>
            <FormParam name="client_secret">{client_secret}</FormParam>
            <FormParam name="refresh_token">{refresh_token}</FormParam>
            <FormParam name="grant_type">{grant_type}</FormParam>
        </FormParams>
        <Path>/token</Path>
    </Set>
    <AssignVariable>
        <Name>token_expiry</Name>
        <Value>300000</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>refresh_token_expiry</Name>
        <Value>3600000</Value>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="true" transport="http" type="request"/>
</AssignMessage>